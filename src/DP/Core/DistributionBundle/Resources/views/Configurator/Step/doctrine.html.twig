{% extends "DPDistributionBundle:Configurator:layout.html.twig" %}

{% block content %}
    {% form_theme form "DPDistributionBundle:Configurator:form.html.twig" %}
    {% include "DPDistributionBundle:Configurator:steps.html.twig" with { "index": index, "count": count } %}

    <h1>{{ 'configurator.db.title'|trans }}</h1>
    <p>{{ 'configurator.db.description'|trans }}</p>

    {{ form_errors(form) }}
    <form action="{{ path('installer_step', {'type': configType, 'index': index}) }}" method="POST">
        <div class="symfony-form-column">
            {{ form_row(form.host) }}
            {{ form_row(form.port) }}
            {{ form_row(form.name) }}
        </div>
        <div class="symfony-form-column">
            {{ form_row(form.user) }}
            {{ form_row(form.password) }}
        </div>

        {{ form_rest(form) }}
        
        <div class="symfony-form-footer">
            <p><input type="submit" value="{{ 'configurator.next'|trans }}" /></p>
            <p>* {{ 'configurator.mandatoryFields'|trans }}</p>
        </div>
    </form>
{% endblock %}
