{% extends "DPDistributionBundle:Configurator:layout.html.twig" %}

{% block content %}
    {% form_theme form "DPDistributionBundle:Configurator:form.html.twig" %}
    {% include "DPDistributionBundle:Configurator:steps.html.twig" %}

    <legend>{{ 'configurator.autoInstall.title'|trans }}</legend>
    <p class="legend-information">{{ 'configurator.autoInstall.description'|trans }}</p>

    {{ form_errors(form) }}
    <form action="{{ path('installer_step', {'type': configType, 'index': index}) }} " method="post">

        {{ form_rest(form) }}

        <div class="form-actions">
            <p><input type="submit" value="{{ 'configurator.next'|trans }}" class="btn btn-primary" /></p>
        </div>

    </form>
{% endblock %}
