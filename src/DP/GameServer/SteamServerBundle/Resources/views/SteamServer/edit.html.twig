{% extends "::layout.html.twig" %}
{% block content %}

<legend><a href="{{ path('steam') }}"><span class="titre">h</span></a>{{ 'steam.edit'|trans }}</legend>

    <form action="{{ path('steam_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <fieldset id="validation"> 
            {{ form_widget(edit_form) }}
            
            <div class="form-actions">
                <button type="submit"  class="btn btn-primary">{{ 'steam.edit'|trans }}</button>
            </div>  
        </fieldset> 
    </form>       
    <form action="{{ path('steam_delete', { 'id': entity.id }) }}" method="post" id="form-delete">
        {{ form_widget(delete_form) }}

        <button type="submit"  class="btn btn-danger">{{ 'steam.del'|trans }}</button>
    </form>   

{% endblock %}
