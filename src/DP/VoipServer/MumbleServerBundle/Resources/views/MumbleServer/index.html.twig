{% extends "::layout.html.twig" %}

{% block title %}
    <a href="{{ path('mumble') }}"> 
        <span class="icon" data-icon="&#x29;" title="{{ 'mumble.back'|trans }}"></span>
    </a>
    
    {{ 'steam.title'|trans }}
{% endblock %}

{% block content %}

    <h2>{{ 'mumble.title'|trans }}</h2>
    
    <ul id="top-nav" class="nav nav-tabs">
        <li>
            <a href="{{ path('mumble_new') }}">
                {{ 'mumble.add'|trans }}
            </a>
        </li>
    </ul>


<div id="steam">
    
    {% for entity in entities %}
        <div class="row serveur-steam" id="steam-{{ entity.id }}">   
            <div class="span2">
                <a href="{{ path('mumble_show', {'id': entity.id }) }}">
                    <img src="/images/serveur/viewer/.png" alt="" />
                </a>
            </div>
            <div class="span9">
                <div class="titre">
                    <a href="{{ path('mumble_show', {id: entity.id}) }}">{# {{ entity.name }} #}</a>
                </div>

                <div class="description">
                        {{ entity.machine.publicIp }}:{{ entity.portmumble }}                  
				
                </div>
            </div>    
            <div class="span3 actions">
                    <a href="{{ path('mumble_edit', {id: entity.id }) }}"><img src="/images/icones/serveur/config.png" title="{{ 'mumble.edit'|trans }}" /></a>
                    <a href="{{ path('mumble_show', {id: entity.id}) }}" class="slide" id="mumble-{{ entity.id }}"><img src="/images/icones/serveur/slide.png" title="Slide"/></a>
                    <a href="{{ path('mumble_show', {id: entity.id}) }}" class="slide" id="mumble-{{ entity.id }}"><img src="/images/icones/serveur/stats.png" title="Statistiques"/></a>
            </div>
        </div>     
        <div class="details" id="mumble-{{ entity.id }}">
            <div class="tabbable tabs-left">
             </div>
        </div> 
    {% endfor %}
</div>
{% endblock %}
