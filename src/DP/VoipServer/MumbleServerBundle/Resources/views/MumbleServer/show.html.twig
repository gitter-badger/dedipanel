{% extends "::layout.html.twig" %}

{% block title %}
    <a href="{{ path('mumble') }}"> 
        <span class="icon" data-icon="&#x29;" title="{{ 'mumble.back'|trans }}"></span>
    </a>
    
    {{ 'steam.title'|trans }}
{% endblock %}

{% block content %}

<h2>{{ 'mumble.show'|trans }}</h2>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>{{ 'mumble.id'|trans }}</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>{{ 'mumble.IPAddress'|trans }}</th>
                <td>{{ entity.machine.publicIp }}</td>
            </tr>
            <tr>
                <th>{{ 'mumble.port'|trans }}</th>
                <td>{{ entity.portmumble }}</td>
            </tr>
            <tr>
                <th>{{ 'mumble.icesecret'|trans }}</th>
                <td>{{ entity.icesecret }}</td>
            </tr>
        </tbody>
    </table>

    <div class="form-group clearfix">
        <form action="{{ path('mumble_edit', { 'id': entity.id }) }}" method="post" class="form-edit">          
            <div class="form-actions">
                <button type="submit"  class="btn btn-primary">{{ 'mumble.edit'|trans }}</button>
            </div>
        </form>

        <form action="{{ path('mumble_delete', { 'id': entity.id }) }}" method="post" class="form-delete">
            {{ form_widget(delete_form) }}

            <button type="submit"  class="btn btn-danger">{{ 'mumble.del'|trans }}</button>
        </form>
    </div>
{% endblock %}