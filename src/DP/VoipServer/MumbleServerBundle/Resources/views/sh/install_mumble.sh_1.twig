MUMBLE_URL="http://freefr.dl.sourceforge.net/project/mumble/Mumble/1.2.3/murmur-static_x86-1.2.3.tar.bz2"
INSTALL_DIR =  "{{ installDir }}"

    cd $INSTALL_DIR 

    # On commence par télécharger le serveur mumble
    wget "$MUMBLE_URL"
    
    # On décompresse l'archive et on la supprime 
    tar xjf murmur-static_x86-1.2.3.tar.bz2 && rm -f murmur-static_x86-1.2.3.tar.bz2
    
    # On deplace tout du dossier de décompression et on supprime le dossier inutile
    find $INSTALL_DIRmurmur-static_x86-1.2.3 -type f -exec mv {} $INSTALL_DIR \;
    rm -f $INSTALL_DIRmurmur-static_x86-1.2.3
    
    # Une fois dans le dossier on donne les droit au binaire mumble
    chmod +x murmur.x86

    
    echo "Install ended" >> install.log
