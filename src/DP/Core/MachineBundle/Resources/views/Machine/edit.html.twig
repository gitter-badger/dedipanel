{% extends "::layout.html.twig" %}

{% block content %}

<legend><a href="{{ path('machine') }}"><span class="titre">h</span></a>{{ 'machine.editMachine'|trans }}</legend>

    <form action="{{ path('machine_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>    
        {{ form_widget(edit_form) }}

        <div class="form-actions">
            <button type="submit"  class="btn btn-primary">{{ 'machine.edit'|trans }}</button>
        </div>    
    </form>    
    <form action="{{ path('machine_delete', { 'id': entity.id }) }}" method="post" id="form-delete">
            {{ form_widget(delete_form) }}

            <button type="submit"  class="btn btn-danger">{{ 'machine.del'|trans }}</button>
    </form>   


{% endblock %}