NAME="mumbletest"
PATH="/home/dp/mumbletest/"
BIN="murmur.x86"
PIDFILE=$PATH$NAME.pid
DAEMON=$PATH$BIN

test -x $DAEMON || exit 0

case "$1" in
    start)
        if [ -d $PIDFILE ]; 
        then
            /sbin/start-stop-daemon --start --quiet \
                              --background \
                              --make-pidfile $PIDFILE \
                              --pidfile $PIDFILE \
                              --exec $DAEMON
        else
            echo "Serveur already started";
        fi
    ;;
    
    stop)
        if [ ! -d $PIDFILE ]; 
        then    
            /sbin/start-stop-daemon --stop --quiet \
                              --retry=TERM/30/KILL/5 \
                              --pidfile $PIDFILE
        else
            echo "Serveur already stoped";
        fi    
    ;;
    
    restart)
        $0 stop
        sleep 1
        $0 start

        exit ${?}
    ;;
    status)
        if [ ! -d $PIDFILE ];  
        then
            echo "Serveur already stoped";
        else
            echo "Serveur already started";
        fi        
    ;;
    
    *)
    echo "Usage: $N {start|stop|restart|status}"
    exit 3
    ;;
    
esac